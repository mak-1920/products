<table class="table">
    <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Description</th>
        <th>Stock</th>
        <th>Cost</th>
        {% if withAdded %}
            <th>Date added</th>
        {% endif %}
        <th>Date discontinued</th>
    </tr>
    {% for product in products %}
        {% include('main/blocks/products_table/row.html.twig') with {
            'product': product,
            'withAdded': withAdded,
        } %}
    {% endfor %}
</table>